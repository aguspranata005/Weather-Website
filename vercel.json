{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/main.go",
      "use": "@vercel/go"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.go"
    },
    {
      "source": "/((?!api/|[^/]+\\.[^/]+$).*)",
      "destination": "/index.html"
    }
  ]
}