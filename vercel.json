{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.go",
      "use": "@vercel/go",
      "config": {
        "maxLambdaSize": "15mb",
        "goVersion": "1.22"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "pnpm install --prefix frontend && pnpm run build --prefix frontend"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.go"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
